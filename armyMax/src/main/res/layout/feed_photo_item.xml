<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="6dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="5dip" >

    <ImageView
        android:id="@+id/tb"   
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="3dip"
        android:background="#EEEEEE"
    />
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="8dip"
    	
    >
    
        <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    >
        
	    	<TextView
	    	    android:id="@+id/statusName"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:singleLine="true"
	    	    android:text="Adam Smith"
	    	    android:textColor="#3B5998"
	    	    android:textSize="14sp"
	    	    android:textStyle="bold" />
    	
    	</LinearLayout>

        <TextView
            android:id="@+id/ago"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="2 hours ago"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    	
    	<com.androidquery.simplefeed.ui.SlimTextView 
    	    android:id="@+id/desc" 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"   
    		android:text="I like this app!"
    		android:textSize="14sp"
    	/>
    	
    	<LinearLayout
    	    android:id="@+id/content_box"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginBottom="2dip"
    	    android:layout_marginTop="3dip"
    	    android:orientation="horizontal" >
    		
    	    <RelativeLayout 
    	        android:id="@+id/image_box" 
    	        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:orientation="vertical" 
			    android:layout_marginTop="3dip"			    
			    android:layout_marginRight="6dip"
    	        >
    	    
	    	    <ImageView
	    	        android:id="@+id/content_ph"
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:src="@drawable/ic_menu_gallery" />
	    	    
	    	    <ImageView
	    	        android:id="@+id/content_tb"
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:background="#EFEFEF" />
	    	    
	    	    <ImageView
			        android:id="@+id/content_action"   
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:layout_alignRight="@+id/content_tb"
			        android:layout_alignBottom="@+id/content_tb"
			    />
    	    	
    	    </RelativeLayout>
    	    
    	</LinearLayout>

    	<LinearLayout
    	    android:id="@+id/content_detail"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical" >

    	    <com.androidquery.simplefeed.ui.SlimTextView
    	        android:id="@+id/content_name"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:text="Content name"
    	        android:textColor="#3B5998"
    	        android:textSize="12sp" />

    	    <com.androidquery.simplefeed.ui.SlimTextView
    	        android:id="@+id/content_desc"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:text="Content desc"
    	        android:textColor="#AAAAAA"
    	        android:textSize="12sp" />

    	    <TextView
    	        android:id="@+id/content_meta"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:singleLine="true"
    	        android:text="google.com"
    	        android:textColor="#AAAAAA"
    	        android:textSize="11sp" />
    	</LinearLayout>
    	
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="20dip"    		
    		android:layout_marginTop="3dip"
    		android:orientation="horizontal"
    	>

    		<TextView
    		    android:id="@+id/love_count"
    		    android:layout_width="wrap_content"
    		    android:layout_height="20dip"
    		    android:layout_marginLeft="7dip"
    		    android:background="@null"
    		    android:clickable="false"
    		    android:drawableLeft="@drawable/ics_like_s"
    		    android:focusable="false"
    		    android:gravity="left|center_vertical"
    		    android:singleLine="true"
    		    android:text="12"
    		    android:textColor="#AAAAAA"
    		    android:textSize="13sp" />
	    	
	    	<TextView
		        android:id="@+id/comment_count"   
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:layout_marginLeft="10dip"
		        android:gravity="left|center_vertical"
		        android:drawableLeft="@drawable/ics_comment_s"
		        android:background="@null"
		        android:text="12"
		        android:textSize="13sp"
		        android:textColor="#AAAAAA"
		        android:clickable="false"
		        android:focusable="false"
		        android:singleLine="true"
		    />
	    	
	    	<!-- 
	    	<Button
		        android:id="@+id/comment_count"   
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:layout_marginLeft="10dip"
		        android:gravity="left|center_vertical"
		        android:drawableLeft="@drawable/ics_comment_s"
		        android:background="@null"
		        android:text="12"
		        android:textSize="13sp"
		        android:textColor="#AAAAAA"
		        android:clickable="false"
		        android:focusable="false"
		        android:singleLine="true"
		    />
	    	 -->
	        
	    	
	    	
	    	
        </LinearLayout>        
     
    	<RelativeLayout 
    	    android:id="@+id/post_comment_box"   
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="3dip"
    		android:layout_marginBottom="3dip"
    		
    	    >
    	    
    	   
    	    <LinearLayout 
	    	    android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"	    		
	    	>
		    	<ImageView
			        android:id="@+id/comment_tb" 
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_marginTop="2dip"
			        android:background="#EEEEEE"
			    />
		    	<com.androidquery.simplefeed.ui.SlimTextView 
		    	   		android:id="@+id/comment_desc" 
		    	   		android:layout_marginLeft="5dip"
		    			android:layout_width="fill_parent"
		    			android:layout_height="wrap_content"
		    			android:layout_marginRight="30dip"
		    			android:text="message"  
		    			android:textSize="11sp"
		    			android:textColor="#AAAAAA"
		    	    />
		    	    
	    	    
	    	    
    	    </LinearLayout>
    	    
    	    <ImageView
			        android:id="@+id/button_comment" 
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_marginBottom="2dip"
			        android:layout_weight="0"
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_menu_start_conversation"
			    />
    	    
    	</RelativeLayout>    
    	
    	    
    		<RelativeLayout 
	    	    android:id="@+id/action_box"  
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				>        
				
			    <ImageButton 
			        android:id="@+id/button_like"   
				    android:layout_width="50dip"
					android:layout_height="50dip"
					android:padding="10dip"
			        
			        android:scaleType="centerCrop"
			        />
			    
			    <ImageButton 
			        android:id="@+id/button_source1"   
				    android:layout_width="50dip"
					android:layout_height="50dip"
					android:padding="10dip"
					android:layout_toRightOf="@id/button_like"
			        android:src="@drawable/ic_menu_gallery"
			        android:scaleType="centerCrop"
			        />
			    
			    <ImageButton 
			        android:id="@+id/button_source2"   
				    android:layout_width="50dip"
					android:layout_height="50dip"
					android:padding="10dip"
					android:layout_toRightOf="@id/button_source1"
			        android:src="@drawable/ic_menu_gallery"
			        android:scaleType="centerCrop"
			        />
			
			    
			</RelativeLayout>       
    	    
    </LinearLayout>

</LinearLayout>