<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <EditText
            android:id="@+id/comment_box"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="6dip"
            android:layout_weight="0.2"
            android:ems="10"
            android:gravity="top"
            android:hint="โพสข้อความ"
            android:imeOptions="actionDone|flagNoEnterAction"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:shadowRadius="1" />

        <Button
            android:id="@+id/button_recent"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/facebook_login_button"
            android:drawableTop="@drawable/ic_post"
            android:paddingTop="10dp"
            android:text="Post"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="4"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp" >

        <Button
            android:id="@+id/button_photo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:background="@drawable/facebook_login_button"
            android:drawableTop="@drawable/ic_photo"
            android:paddingTop="10dp"
            android:text="Choose"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_video"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:background="@drawable/facebook_login_button"
            android:drawableTop="@drawable/ic_camera2"
            android:paddingTop="10dp"
            android:text="Camera"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Mac/Desktop/android.2015/android.studio/ArmyMax1/armyMax/src/main/res/layout/fragment_post_status.xml -->