<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

 	<EditText
 	    android:id="@+id/editTxt"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_marginTop="5dp"
 	    android:hint="Search recent chat"
 	    android:maxLines="1"
 	    android:visibility="gone" />
    
    <ListView android:id="@+id/listView" 
        	  android:layout_height="match_parent"
        	  android:layout_width="match_parent"
        	  android:layout_weight="1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/button_friend"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:background="@drawable/facebook_login_button"
            android:drawableTop="@drawable/ic_friend"
            android:onClick="addPlanet"
            android:paddingTop="10dp"
            android:text="Friend"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_recent"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:background="@drawable/facebook_login_button"
            android:drawableTop="@drawable/ic_recent_chat"
            android:onClick="addPlanet"
            android:paddingTop="10dp"
            android:text="Recent Chat"
            android:textColor="@color/white" />

    </LinearLayout>
    
    

    
</LinearLayout>
