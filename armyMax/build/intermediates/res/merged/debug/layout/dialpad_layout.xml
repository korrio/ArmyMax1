<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View
        android:id="@+id/line_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray" >
    </View>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/button1"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_1" />

            <ImageView
                android:id="@+id/button2"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_2" />

            <ImageView
                android:id="@+id/button3"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/button4"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_4" />

            <ImageView
                android:id="@+id/button5"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_5" />

            <ImageView
                android:id="@+id/button6"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/button7"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_7" />

            <ImageView
                android:id="@+id/button8"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_8" />

            <ImageView
                android:id="@+id/button9"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/buttonstar"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_star" />

            <ImageView
                android:id="@+id/button0"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_0" />

            <ImageView
                android:id="@+id/buttonpound"
                style="@style/DialtactsDialpadButtonStyle"
                android:src="@drawable/dial_num_pound" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="48sp" />

        <ImageButton
            android:id="@+id/button_delete_1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@null"
        android:scaleType="fitCenter"
            android:src="@drawable/button_delete" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/button_call" />

</RelativeLayout><!-- From: file:/Users/Mac/Desktop/android.2015/android.studio/ArmyMax1/armyMax/src/main/res/layout/dialpad_layout.xml -->