<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_gray_texture"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="@dimen/widthProfile_dialog"
            android:layout_height="@dimen/hightProfile_dialog"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.5" >

        <Button
            android:id="@+id/buttonChats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/action_bar"
            android:drawableTop="@drawable/ic_chats"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Chat"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonFreeCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/action_bar"
            android:drawableTop="@drawable/ic_audio"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Audio"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/action_bar"
            android:drawableTop="@drawable/ic_post_live"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Video"
            android:textColor="#fff"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>
